<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodReview.View.SharedView.RestaurentView">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <Image Source="twitter.png" WidthRequest="100" VerticalOptions="CenterAndExpand"/>
            <StackLayout 
                Padding="5,10"
                BackgroundColor="AliceBlue" 
                HorizontalOptions="FillAndExpand">
                <Label 
                    Text="{Binding Name}" FontSize="Title"
                    HorizontalOptions="FillAndExpand"/>
                <Label 
                    Text="{Binding Address}" FontSize="Subtitle"
                    HorizontalOptions="FillAndExpand"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Food: 1/5"></Label>
                    <Label Text=" | "></Label>
                    <Label Text="Food: 3/5"></Label>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Open: 1pm-8pm" />
                    <Button Text="Share"></Button>
                    <Button Text="Review"></Button>
                </StackLayout>
            </StackLayout>
        </StackLayout>
        
    </ContentView.Content>
</ContentView>